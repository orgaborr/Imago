<GridPane fx:controller="com.orgabor.imago.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label text="Add meg a forrásmappa helyét:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="sourceDir" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Add meg a célmappát:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="destDir" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Új féjlok neve:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

    <Button fx:id="goButton" text="Mehet" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

</GridPane>
