<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:controller="com.orgabor.imago.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="10" bottom="10" left="15" right="15"/>
    </padding>

    <top>
        <Label text="Másold és nevezd át képeidet egyszerűen!" BorderPane.alignment="TOP_LEFT">
            <font>
                <Font name="Arial bold"/>
            </font>
        </Label>
    </top>
    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
            <padding>
                <Insets top="20" bottom="35" right="15" left="15"/>
            </padding>

            <Label text="Forrásmappa:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   GridPane.halignment="RIGHT"/>
            <TextField fx:id="sourceTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       GridPane.columnSpan="30"/>

            <Label text="Célmappa:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   GridPane.halignment="RIGHT"/>
            <TextField fx:id="destTextField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                       GridPane.columnSpan="30"/>

            <Label text="Új fájlok neve (kiterjesztés nélkül):" GridPane.rowIndex="2" GridPane.columnIndex="0"
                   GridPane.halignment="RIGHT" wrapText="true"/>
            <TextField fx:id="nameTextField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                       GridPane.columnSpan="15"/>
        </GridPane>
    </center>
    <bottom>
        <Button fx:id="goButton" text="Mehet" BorderPane.alignment="BASELINE_CENTER"
                onAction="#startProcessing"/>
    </bottom>
</BorderPane>